{
  "expo": {
    "name": "TechBuy",
    "slug": "TechBuy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/whiteLogo.png",
      "meta": {
        "name": "TechBuy - Loja Online",
        "description": "Seu e-commerce mobile e web feito com React Native + Expo."
      }
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "EXPO_ROUTER_APP_ROOT": "./app"
    }
  }
}
